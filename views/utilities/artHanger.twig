{% extends "layout.html" %}

{% block content %}
<b>Inputs</b>
<ul>
    <li> wire length = {{length}}
    <li> rectangle height = {{height}}
    <li> rectangle width = {{width}}
    <li> stud spacing = {{stud}}
    <li> horizontal offset = {{offset}}
</ul>
<b>Results</b> for screw locations (below top edge)
<ul>
    <li> y<sub>1</sub> = {{height - y1}}
    <li> y<sub>2</sub> = {{height - y2}}
</ul>
<svg width={{widthPx}} height={{heightPx}}>
    <rect
        id="art"
        width={{widthPx}}
        height={{scale * height}}
        y={{heightPx - scale * height}}
        fill="lightgray"
        stroke="black"
    />
    <line
        id="left wire"
        x1="0"
        y1={{heightPx}}
        x2={{scale * (width / 2 - offset)}}
        y2={{heightPx - scale * y1}}
        stroke="black"
        stroke-width="2"
    />
    <circle
        id="left screw"
        cx={{scale * (width / 2 - offset)}}
        cy={{heightPx - scale * y1}}
        r="10"
    />
    <line
        id="continuation of left wire"
        x1={{scale * (width / 2 - offset)}}
        y1={{heightPx - scale * y1}}
        x2={{widthPx / 2}}
        y2={{heightPx - slope * widthPx / 2}}
        stroke="black"
        stroke-dasharray="1, 2"
    />
    <line
        id="left stud"
        x1={{scale * (width / 2 - offset)}}
        x2={{scale * (width / 2 - offset)}}
        y2={{heightPx}}
        stroke="gray"
        stroke-width="8"
    />
    <line
        id="middle wire"
        x1={{scale * (width / 2 - offset)}}
        y1={{heightPx - scale * y1}}
        x2={{scale * (width / 2 + stud - offset)}}
        y2={{heightPx - scale * y2}}
        stroke="black"
        stroke-width="2"
    />
    <line
        id="right stud"
        x1={{scale * (width / 2 + stud - offset)}}
        x2={{scale * (width / 2 + stud - offset)}}
        y2={{heightPx}}
        stroke="gray"
        stroke-width="8"
    />
    <line
        id="continuation of right wire"
        x1={{widthPx / 2}}
        y1={{heightPx - slope * widthPx / 2}}
        x2={{scale * (width / 2 + stud - offset)}}
        y2={{heightPx - scale * y2}}
        stroke="black"
        stroke-dasharray="1, 2"
    />
    <circle
        id="right screw"
        cx={{scale * (width / 2 + stud - offset)}}
        cy={{heightPx - scale * y2}}
        r="10"
    />
    <line
        id="right wire"
        x1={{scale * (width / 2 + stud - offset)}}
        y1={{heightPx - scale * y2}}
        x2 = {{widthPx}}
        y2 = {{heightPx}}
        stroke="black"
        stroke-width="2"
    />
</svg>

{% endblock %}
