{% extends "layout.html" %}

{% block content %}
<svg
    id="grapher"
    height={{height + 80}}
    width={{width + 150}}
    data-mx-my-bx-by={{mx ~ "/" ~ my ~ "/" ~ bx ~ "/" ~ by}}
>
    <g
        class="graph-container"
        transform="translate(100, 10)"
    >
        <rect
            class="graph-container"
            height={{height}}
            width={{width}}
            fill="transparent"
            stroke="black"
        />
        <g
            transform="translate(0, {{height}})"
        >
            <g>
                {% for i in range(0, nX) %}
                    <g
                      transform="translate({{i * width / nX}}, 0)"
                    >
                        <line y2="10" stroke="black" />
                        <text y="25" text-anchor="middle" dy="0.32em">{{xMin + i * dX}}</text>
                    </g>
                {% endfor %}
            </g>
            <g
                transform="translate({{width / 2}}, 50)"
            >
                <text
                  text-anchor="middle"
                  dy="0.32em"
                  font-size="20"
                >
                    {{xLabel}}
                </text>
            </g>
            <g>
                {% for j in range(0, nY) %}
                    <g
                      transform="translate(0, {{0 - j * height / nY}})"
                    >
                        <line x2="-10" stroke="black" />
                        <text x="-25" text-anchor="middle" dy="0.32em">{{yMin + j * dY}}</text>
                    </g>
                {% endfor %}
            </g>
            <g
                transform="translate(-55, {{0 - height / 2}}) rotate(-90)"
            >
                <text
                  text-anchor="middle"
                  dy="0.32em"
                  font-size="20"
                >
                    {{yLabel}}
                </text>
            </g>
            <g>
                {% for xy in xys %}
                    {% if xy|length == 3 %}
                        {% if xy[2] == "" %}
                            <circle
                                cx={{width * (mx * xy[0] + bx)}}
                                cy={{0 - height * (my * xy[1] + by)}}
                                r={{height / 100}}
                                fill="transparent"
                                stroke="black"
                            />
                        {% else %}
                            <text
                                x={{width * (mx * xy[0] + bx)}}
                                y={{0 - height * (my * xy[1] + by)}}
                                text-anchor="middle"
                                dy="0.32em"
                            >
                                {{xy[2]}}
                            </text>
                        {% endif %}
                    {% endif %}
                {% endfor %}
                {% for xy in xys %}
                    {% if loop.index != xys|length %}
                        <line
                            x1={{width * (mx * xys[loop.index0][0] + bx)}}
                            x2={{width * (mx * xys[loop.index][0] + bx)}}
                            y1={{0 - height * (my * xys[(loop.index0)][1] + by)}}
                            y2={{0 - height * (my * xys[loop.index][1] + by)}}
                            stroke="black"
                        />
                    {% endif %}
                {% endfor %}
            </g>
        </g>
    </g>
</svg>
{% endblock %}
