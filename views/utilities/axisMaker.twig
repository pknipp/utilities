{% extends "layout.html" %}


{% block content %}
<svg
    height={{height + 40}}
    width={{width + 150}}
>
    <g
        transform="translate(100, 10)"
    >
        <rect
            height={{height}}
            width={{width}}
            fill="transparent"
            stroke="black"
        />
        {% for i in range(0, nX) %}
            <g
              transform="translate({{i * width / nX}}, 0)"
            >
                <line y2="10" stroke="black" />
                <text y="25" text-anchor="middle" dy="0.32em">{{xMin + i * dX}}</text>
            </g>
        {% endfor %}
    </g>
</svg>
{% endblock %}
