{% extends "layout.html" %}


{% block content %}
<svg
    height={{height + 80}}
    width={{width + 150}}
>
    <g
        transform="translate(100, 10)"
    >
        <rect
            height={{height}}
            width={{width}}
            fill="transparent"
            stroke="black"
        />
        <g
            transform="translate(0, {{height}})"
        >
            {% for i in range(0, nX) %}
                <g
                  transform="translate({{i * width / nX}}, 0)"
                >
                    <line y2="10" stroke="black" />
                    <text y="25" text-anchor="middle" dy="0.32em">{{xMin + i * dX}}</text>
                </g>
            {% endfor %}
            <g
                transform="translate({{width / 2}}, 50)"
            >
                <text
                  text-anchor="middle"
                  dy="0.32em"
                  font-size="20"
                >
                    {{xLabel}}
                </text>
            </g>
        </g>
    </g>
</svg>
{% endblock %}
