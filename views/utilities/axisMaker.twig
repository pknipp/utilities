{% extends "layout.html" %}


{% block content %}
<svg
    height={{40}}
    width={{size + 150}}
>
    <g
        transform="translate(100, 0)"
    >
        <rect
            height={{40}}
            width=${size}
            fill="transparent"
            stroke="black"
        />
        {% for i in range(0, n) %}
            <g
              transform="translate({{i * size / n}}, 0)"
            >
                <line y2="10" stroke="black" />
                <text y="25" text-anchor="middle" dy="0.32em">{{min + i * del}}</text>
            </g>
        {% endfor %}
    </g>
</svg>
{% endblock %}
