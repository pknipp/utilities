{% extends "layout.html" %}


{% block content %}
<svg
    height={{height + 80}}
    width={{width + 150}}
>
    <g
        transform="translate(100, 10)"
    >
        <rect
            height={{height}}
            width={{width}}
            fill="transparent"
            stroke="black"
        />
        <g
            transform="translate(0, {{height}})"
        >
            <g>
                {% for i in range(0, nX) %}
                    <g
                      transform="translate({{i * width / nX}}, 0)"
                    >
                        <line y2="10" stroke="black" />
                        <text y="25" text-anchor="middle" dy="0.32em">{{xMin + i * dX}}</text>
                    </g>
                {% endfor %}
            </g>
            <g
                transform="translate({{width / 2}}, 50)"
            >
                <text
                  text-anchor="middle"
                  dy="0.32em"
                  font-size="20"
                >
                    {{xLabel}}
                </text>
            </g>
            <g>
                {% for j in range(0, nY) %}
                    <g
                      transform="translate(0, {{0 - j * height / nY}})"
                    >
                        <line x="-10" stroke="black" />
                        <text x="-25" text-anchor="middle" dy="0.32em">{{yMin + j * dY}}</text>
                    </g>
                {% endfor %}
            </g>
            <g
                transform="translate(50, {{0 - height / 2}}) rotate(-90)"
            >
                <text
                  text-anchor="middle"
                  dy="0.32em"
                  font-size="20"
                >
                    {{yLabel}}
                </text>
            </g>
        </g>
    </g>
</svg>
{% endblock %}
